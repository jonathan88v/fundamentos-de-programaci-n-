#include <stdio.h>

int main() {
    int dia, mes, anio;
    int valido = 1, bisiesto = 0;

    printf("Ingrese el dia: ");
    scanf("%d", &dia);

    printf("Ingrese el mes (1-12): ");
    scanf("%d", &mes);

    printf("Ingrese el anio: ");
    scanf("%d", &anio);

    // Verificar si el año es bisiesto
    if ((anio % 4 == 0 && anio % 100 != 0) || (anio % 400 == 0)) {
        bisiesto = 1;
    }

    // Validación del mes
    if (mes < 1 || mes > 12) {
        valido = 0;
    } else {
        // Validación de días según el mes
        switch (mes) {
            case 1: case 3: case 5: case 7: case 8: case 10: case 12: // Meses de 31 días
                if (dia < 1 || dia > 31) valido = 0;
                break;
            case 4: case 6: case 9: case 11: // Meses de 30 días
                if (dia < 1 || dia > 30) valido = 0;
                break;
            case 2: // Febrero
                if (bisiesto) {
                    if (dia < 1 || dia > 29) valido = 0;
                } else {
                    if (dia < 1 || dia > 28) valido = 0;
                }
                break;
        }
    }

    if (!valido) {
        printf("Fecha invalida \n");
        return 1;
    }

    // Determinar estación
    if ((mes == 9  && dia >= 21) || (mes == 10) || (mes == 11) || (mes == 12 && dia < 21)) {
        printf("Es Primavera \n");
    } 
    else if ((mes == 12 && dia >= 21) || (mes == 1) || (mes == 2) || (mes == 3 && dia < 21)) {
        printf("Es Verano \n");
    } 
    else if ((mes == 3  && dia >= 21) || (mes == 4) || (mes == 5) || (mes == 6 && dia < 21)) {
        printf("Es Otoño \n");
    } 
    else if ((mes == 6  && dia >= 21) || (mes == 7) || (mes == 8) || (mes == 9 && dia < 21)) {
        printf("Es Invierno \n");
    }

    return 0;
}
