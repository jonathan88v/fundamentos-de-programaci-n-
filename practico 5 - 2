#include <stdio.h>
#include <math.h>

int main() {
    double a, b, c;
    double discriminante, x1, x2;
    int caso;

    printf("Resolver ecuacion cuadratica: ax^2 + bx + c = 0\n");

    // Ingreso de coeficientes
    printf("Ingrese a: ");
    scanf("%lf", &a);
    printf("Ingrese b: ");
    scanf("%lf", &b);
    printf("Ingrese c: ");
    scanf("%lf", &c);

    if (a == 0) {
        printf("No es una ecuacion cuadratica (a=0).\n");
    } else {
        discriminante = b*b - 4*a*c;

        // Clasifico el caso
        if (discriminante > 0)
            caso = 1;
        else if (discriminante == 0)
            caso = 0;
        else
            caso = -1;

        // Uso switch con el caso
        switch(caso) {
            case 1: // Discriminante positivo
                x1 = (-b + sqrt(discriminante)) / (2*a);
                x2 = (-b - sqrt(discriminante)) / (2*a);
                printf("Dos soluciones reales:\n");
                printf("x1 = %.2lf\n", x1);
                printf("x2 = %.2lf\n", x2);
                break;

            case 0: // Discriminante cero
                x1 = -b / (2*a);
                printf("Una solucion real doble:\n");
                printf("x = %.2lf\n", x1);
                break;

            case -1: // Discriminante negativo
            {
                double parteReal = -b / (2*a);
                double parteImag = sqrt(-discriminante) / (2*a);
                printf("Dos soluciones complejas:\n");
                printf("x1 = %.2lf + %.2lfi\n", parteReal, parteImag);
                printf("x2 = %.2lf - %.2lfi\n", parteReal, parteImag);
                break;
            }
        }
    }

    return 0;
}
